{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "CommonJS",
    "declaration": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.*", "tests/**/*.*"]
}
